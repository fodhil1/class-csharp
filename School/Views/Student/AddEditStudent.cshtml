@model School.Models.StudentViewModel
@{
    var isEditMode = Model.StudentId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.FullName : "Add Student";

}

<h2>@Model.FullName</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditStudent" : "AddStudent", "Student"))
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.StudentId)  @*// make sure if it is the right place for this input*@
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.StudentId)  @*// make sure if it is the right place for this input*@
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>
